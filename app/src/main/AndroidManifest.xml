<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lab2">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lab2">
        <activity
            android:name=".TakePictureActivity"
            android:exported="false" />
        <activity
            android:name=".SongActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
        <activity
            android:name=".InfoResultsActivity"
            android:exported="false" />
        <activity
            android:name=".InfoPageActivity"
            android:exported="false" />
        <activity
            android:name=".TicTacToeActivity"
            android:exported="false" />
        <activity
            android:name=".MyDrawingActivity"
            android:exported="false" /> <!-- first launch activity (Main menu) -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Weather activity -->
        <activity
            android:name=".WeatherActivity"
            android:exported="false" />
    </application>

</manifest>